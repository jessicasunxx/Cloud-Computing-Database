# PawPal User Service Database Configuration
# Copy this file to database.env and update with your actual values

# Database Connection Settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=pawpal_db
DB_USERNAME=pawpal_user
DB_PASSWORD=pawpal_secure_2024!

# Connection Pool Settings (for production)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# SSL Settings (for cloud deployment)
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Timezone
DB_TIMEZONE=UTC

# Logging
DB_LOG_LEVEL=info
DB_LOG_QUERIES=false

# Migration Settings
DB_MIGRATE_ON_START=false
DB_BACKUP_ENABLED=true

